<h1><%= @user.name %> さんとのチャット</h1>
<table class="table">
  <tr>
    <th>User</th>
    <th>Message</th>
  </tr>
  <% @messages.each do |message| %>
  <tr>
    <td>
      <%= message.user.name %>
    </td>
    <td>
      <%= message.body %>
  </tr>
  <%end%>
</table>
<%= form_with model: [@user, @message] do |f| %>
  <%= f.text_field :body, rows: "1", class: "form-control col-lg-3" %>
  <% f.submit %>
<% end %>
