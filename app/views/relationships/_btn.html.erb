<% if user.followed_by?(current_user) %>
  <%= link_to "フォロー外す", user_relationships_path(user.id), method: :delete, class: 'btn btn-info d-inline' %>
  <%= link_to "chatを始める", user_messages_path(user.id), class: 'btn btn-outline-success d-inline'%>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, class: 'btn btn-success' %>
<% end %>
